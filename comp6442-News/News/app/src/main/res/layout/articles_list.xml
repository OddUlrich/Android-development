<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/articleList_img"
            android:transitionName="articleList_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/articleList_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/articleList_img"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/work_sans_semibold" />

        <TextView
            android:id="@+id/articleList_source"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/articleList_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:text="Source"
            app:fontFamily="@font/work_sans_semibold" />

        <TextView
            android:id="@+id/articleList_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/articleList_source"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:text="Time"
            app:fontFamily="@font/work_sans_medium" />



    </RelativeLayout>

